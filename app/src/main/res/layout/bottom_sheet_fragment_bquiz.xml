<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bquiz_question_bg"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:indeterminateDrawable="@drawable/anim_progress_icon"
        app:srcCompat="@drawable/hourglass" />

    <TextView
        android:id="@+id/bquiz_bottom_sheet_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Kindly wait for sometime."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>