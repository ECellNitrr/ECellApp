<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.OTPDialogFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@color/dirt_blue" />

    <TextView
        android:id="@+id/verifyotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="8dp"
        android:paddingBottom="10dp"
        android:text="@string/otp"
        android:textAlignment="center"
        android:textColor="@color/colorHamAlertCardBackground"
        android:textSize="32sp"
        android:background="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@+id/otp"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/numberpad"
        app:layout_constraintTop_toBottomOf="@+id/verifyotp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/otp1"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:maxLength="1"
                android:text=" "
                android:textAlignment="center"
                android:textColor="@color/colorHamAlertCardBackground"
                android:background="@color/dark_blue"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/otp2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:maxLength="1"
                android:text=" "
                android:textAlignment="center"
                android:textColor="@color/colorHamAlertCardBackground"
                android:background="@color/dark_blue"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/otp3"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:maxLength="1"
                android:text=" "
                android:textAlignment="center"
                android:textColor="@color/colorHamAlertCardBackground"
                android:background="@color/dark_blue"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/otp4"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:maxLength="1"
                android:text=" "
                android:textAlignment="center"
                android:textColor="@color/colorHamAlertCardBackground"
                android:background="@color/dark_blue"
                android:textSize="32sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:padding="4dp"
        android:text="@string/resend_otp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/otp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/numberpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/otp_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>