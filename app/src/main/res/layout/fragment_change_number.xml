<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ChangeNumberFragment"
    android:background="#DD3377">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/change_num_image_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/change_num_image_guide"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/newmber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_number"
        android:textSize="24sp"
        android:padding="8dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/guidline1"/>

</androidx.constraintlayout.widget.ConstraintLayout>