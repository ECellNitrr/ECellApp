<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/spons_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/black_overlay">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/spons_img"
        android:src="@drawable/ic_hand_shake"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/spons_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SponsorA"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/spons_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sponsor Type"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>