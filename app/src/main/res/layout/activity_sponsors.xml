<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Sponsors">

    <ImageView
        android:id="@+id/spons_bgcircle_5"
    android:layout_width="1000dp"
    android:layout_height="1000dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/spons_bgcircle5" />

    <ImageView
        android:id="@+id/spons_bgcircle_4"
        android:layout_width="750dp"
        android:layout_height="750dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/spons_bgcircle4" />

    <ImageView
        android:id="@+id/spons_bgcircle_3"
        android:layout_width="550dp"
        android:layout_height="550dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/spons_bgcircle3" />

    <ImageView
        android:id="@+id/spons_bgcircle_2"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/spons_bgcircle2" />

    <ImageView
        android:id="@+id/spons_bgcircle_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/spons_bgcircle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/associateSponsBlue"
        android:alpha="0.4"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/associateSponsBlue"
        android:alpha="0.4"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab"/>

</android.support.constraint.ConstraintLayout>